{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "keyofStringsOnly": true
  },
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    "**/*.test.ts*"
  ]
}
